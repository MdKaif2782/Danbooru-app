<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f1f1f"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/cool_nh_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/round_background_left_cool_ash"
            android:gravity="center_vertical">

            <MultiAutoCompleteTextView
                android:id="@+id/textInputSearchBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="210dp"
                android:height="40dp"
                android:backgroundTint="@color/cool_ash"
                android:completionThreshold="1"
                android:dropDownSelector="@drawable/round_full_cool_nh_background"
                android:backgroundTintMode="screen"
                android:popupTheme="@style/PopupMenuStyle"
                android:gravity="center_vertical"
                android:hint="Search Codes. eg:177013"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#92040404"
                android:textSize="15sp" />
        </LinearLayout>


        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/round_background_right_cool_red_nh"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="Search"
            android:textAllCaps="false"
            android:textSize="15sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="460dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/image_frame"
        android:gravity="center"

        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/TextView1"
            android:layout_width="295dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:numColumns="1"
            android:textSize="20sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >
        <CheckBox
            android:id="@+id/sfw_checkbox"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/cool_nh_white"
            android:text="RATE-Q"
            android:background="@drawable/round_background_left_cool_ash"
            />
        <CheckBox
            android:id="@+id/nsfw_checkbox"
            android:textColor="@color/cool_nh_white"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="RATE-E"
            android:background="@drawable/round_background_right_cool_red_nh"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/round_background_left_cool_nh_red"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Log:"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:background="@drawable/round_background_full_cool_ash"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/log_text_view"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/previous_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Prev" />

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:background="@drawable/round_full_cool_nh_background">

            <TextView
                android:id="@+id/page_no_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:text="Page 1"
                android:textColor="@color/cool_nh_white"
                android:textSize="17sp" />
        </LinearLayout>

        <Button
            android:id="@+id/next_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="next" />
    </LinearLayout>







</LinearLayout>