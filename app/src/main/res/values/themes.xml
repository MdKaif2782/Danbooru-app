<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cool_red_nh</item>
        <item name="colorPrimaryVariant">@color/cool_ash</item>
        <item name="colorOnPrimary">@color/cool_nh_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cool_nh_background</item>
        <item name="colorSecondaryVariant">@color/cool_ash</item>
        <item name="colorOnSecondary">@color/cool_red_nh</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:actionBarTheme">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">

        <item name="android:background">@color/cool_nh_white</item>
        <item name="android:textColor">#000</item>

    </style>


</resources>